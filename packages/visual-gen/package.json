{
  "name": "@nexus-ai/visual-gen",
  "version": "0.1.0",
  "description": "Visual generation stage for NEXUS-AI pipeline - converts scripts to visual timelines",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "nexus-ai",
    "visual-generation",
    "scene-mapping",
    "timeline"
  ],
  "author": "Cryptology",
  "license": "MIT",
  "dependencies": {
    "@nexus-ai/asset-library": "workspace:*",
    "@nexus-ai/audio-mixer": "workspace:*",
    "@nexus-ai/core": "workspace:*",
    "@nexus-ai/director-agent": "workspace:*",
    "@nexus-ai/script-gen": "workspace:*",
    "@nexus-ai/timestamp-extraction": "workspace:*"
  },
  "devDependencies": {
    "@nexus-ai/config": "workspace:*",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  }
}
