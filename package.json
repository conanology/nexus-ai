{
  "name": "nexus-ai",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "vitest run --workspace vitest.workspace.ts",
    "test:watch": "vitest --workspace vitest.workspace.ts",
    "test:ci": "vitest run --workspace vitest.workspace.ts --reporter=verbose",
    "test:coverage": "vitest run --workspace vitest.workspace.ts --coverage",
    "check-types": "turbo check-types",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "pipeline:local": "tsx scripts/run-local.ts"
  },
  "devDependencies": {
    "@google-cloud/storage": "^7.15.0",
    "@playwright/test": "^1.50.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^8.57.1",
    "tsx": "^4.21.0",
    "turbo": "^2.3.5",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
